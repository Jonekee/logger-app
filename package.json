{
  "name": "logger-app",
  "description": "A self-hosted application for remotely watching log files through a web UI.",
  "author": "Ross Court <rosscourt93@gmail.com> (http://github.com/rosscourt)",
  "license": "MIT",
  "version": "0.8.2",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/logger-app/logger-app.git"
  },
  "homepage": "http://logger-app.github.io/",
  "keywords": [
    "react",
    "isomorphic",
    "universal",
    "webpack",
    "express",
    "hot reloading",
    "react-hot-reloader",
    "redux",
    "babel"
  ],
  "main": "bin/server.js",
  "bin": {
    "logger-app": "bin/app.js"
  },
  "scripts": {
    "start": "concurrently --kill-others \"npm run start-prod\" \"npm run start-prod-api\"",
    "start-prod": "better-npm-run start-prod",
    "start-prod-api": "better-npm-run start-prod-api",
    "build": "better-npm-run build",
    "lint": "eslint -c .eslintrc src api",
    "start-dev": "better-npm-run start-dev",
    "start-dev-api": "better-npm-run start-dev-api",
    "watch-client": "better-npm-run watch-client",
    "dev": "concurrently --kill-others \"npm run watch-client\" \"npm run start-dev\" \"npm run start-dev-api\"",
    "test": "karma start",
    "test-node": "./node_modules/mocha/bin/mocha $(find api -name '*-test.js') --compilers js:babel-core/register",
    "test-node-watch": "./node_modules/mocha/bin/mocha $(find api -name '*-test.js') --compilers js:babel-core/register --watch",
    "clean-lib": "rm -fr lib && mkdir -p lib/{api,src}",
    "populate-lib": "cp -r api/* lib/api/ && cp -r src/* lib/src/ && find ./lib -name \"*.js\" -type f -delete",
    "compile-to-lib": "babel -d lib/src/ src/ && babel -d lib/api/ api/",
    "build-from-lib": "better-npm-run npm-build",
    "prepublish": "npm run lint && npm run clean-lib && npm run populate-lib && npm run compile-to-lib && npm run build-from-lib"
  },
  "betterScripts": {
    "start-prod": {
      "command": "node ./bin/server.js",
      "env": {
        "NODE_ENV": "production",
        "PORT": 8080,
        "APIPORT": 3030
      }
    },
    "start-prod-api": {
      "command": "node ./bin/api.js",
      "env": {
        "NODE_ENV": "production",
        "APIPORT": 3030
      }
    },
    "start-dev": {
      "command": "node ./bin/server.js",
      "env": {
        "NODE_ENV": "development",
        "PORT": 4000,
        "APIPORT": 4030
      }
    },
    "start-dev-api": {
      "command": "node ./bin/api.js",
      "env": {
        "NODE_ENV": "development",
        "APIPORT": 4030
      }
    },
    "watch-client": {
      "command": "node webpack/webpack-dev-server.js",
      "env": {
        "UV_THREADPOOL_SIZE": 100,
        "NODE_PATH": "./src"
      }
    },
    "build": {
      "command": "webpack --verbose --colors --display-error-details --config webpack/prod.config.js",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "npm-build": {
      "command": "webpack --verbose --colors --display-error-details --config webpack/npm.config.js",
      "env": {
        "NODE_ENV": "production"
      }
    }
  },
  "dependencies": {
    "babel-core": "^6.3.26",
    "babel-loader": "^6.2.1",
    "babel-plugin-add-module-exports": "^0.1.2",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-react-display-name": "^6.3.13",
    "babel-plugin-transform-runtime": "^6.3.13",
    "babel-polyfill": "^6.3.14",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "babel-preset-stage-0": "^6.3.13",
    "babel-register": "^6.3.13",
    "babel-runtime": "^6.3.19",
    "bcrypt-nodejs": "0.0.3",
    "body-parser": "^1.14.1",
    "classnames": "^2.2.3",
    "commander": "^2.9.0",
    "compression": "^1.6.0",
    "express": "^4.13.3",
    "express-session": "^1.12.1",
    "history": "^1.17.0",
    "http-proxy": "^1.12.0",
    "invariant": "^2.2.0",
    "logging-manager": "^1.0.1",
    "lru-memoize": "^1.0.0",
    "map-props": "^1.0.0",
    "piping": "^0.3.0",
    "pretty-error": "^2.0.0",
    "query-string": "^4.1.0",
    "react": "^15.0.0",
    "react-dom": "^15.0.0",
    "react-helmet": "^3.0.1",
    "react-inline-css": "^2.0.0",
    "react-redux": "^4.0.0",
    "react-router": "^1.0.0",
    "react-transform-catch-errors": "^1.0.0",
    "redbox-react": "^1.1.1",
    "redux": "^3.0.4",
    "redux-router": "1.0.0-beta5",
    "scroll-behavior": "^0.3.0",
    "serialize-javascript": "^1.1.2",
    "serve-favicon": "^2.3.0",
    "socket.io": "^1.3.7",
    "socket.io-client": "^1.3.7",
    "superagent": "^1.4.0",
    "tail": "^0.4.0",
    "uglify-js": "^2.6.2",
    "url-loader": "^0.5.7",
    "warning": "^2.1.0",
    "webpack": "^1.12.9",
    "webpack-isomorphic-tools": "^2.2.18"
  },
  "devDependencies": {
    "autoprefixer-loader": "^3.1.0",
    "babel-eslint": "^5.0.0-beta6",
    "babel-plugin-react-transform": "^2.0.0",
    "babel-plugin-typecheck": "^3.6.0",
    "better-npm-run": "^0.0.8",
    "chai": "^3.3.0",
    "clean-webpack-plugin": "^0.1.4",
    "concurrently": "^2.0.0",
    "css-loader": "^0.23.0",
    "eslint": "1.10.3",
    "eslint-config-airbnb": "0.1.0",
    "eslint-loader": "^1.0.0",
    "eslint-plugin-import": "^0.8.0",
    "eslint-plugin-react": "^3.5.0",
    "extract-text-webpack-plugin": "^0.9.1",
    "karma": "^0.13.10",
    "karma-cli": "^0.1.1",
    "karma-mocha": "^0.2.0",
    "karma-mocha-reporter": "^1.1.1",
    "karma-phantomjs-launcher": "^0.2.1",
    "karma-sourcemap-loader": "^0.3.5",
    "karma-webpack": "^1.7.0",
    "mocha": "^2.3.3",
    "node-sass": "^3.4.2",
    "phantomjs": "^1.9.18",
    "phantomjs-polyfill": "0.0.1",
    "react-addons-test-utils": "^0.14.0",
    "react-transform-hmr": "^1.0.1",
    "redux-devtools": "^3.0.0-beta-3",
    "redux-devtools-dock-monitor": "^1.0.0-beta-3",
    "redux-devtools-log-monitor": "^1.0.0-beta-3",
    "sass-loader": "^3.1.2",
    "sinon": "^1.17.2",
    "strip-loader": "^0.1.0",
    "style-loader": "^0.13.0",
    "timekeeper": "0.0.5",
    "webpack-dev-middleware": "^1.4.0",
    "webpack-hot-middleware": "^2.5.0"
  },
  "engines": {
    "node": ">= 4.1.1"
  }
}
